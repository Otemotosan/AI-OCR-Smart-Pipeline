# Environment Configuration for OCR Pipeline
# Copy this file to .env and fill in the values

# GCP Project Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=asia-northeast1

# Cloud Storage Buckets
INPUT_BUCKET=your-project-id-ocr-input
OUTPUT_BUCKET=your-project-id-ocr-output
QUARANTINE_BUCKET=your-project-id-ocr-quarantine

# Document AI Configuration
DOCUMENT_AI_PROCESSOR=projects/your-project-id/locations/asia-northeast1/processors/PROCESSOR_ID

# BigQuery Configuration
BIGQUERY_DATASET=ocr_pipeline

# API Keys (stored in Secret Manager for production)
# GEMINI_API_KEY=your-gemini-api-key

# Alerting Configuration
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
# SENDGRID_API_KEY=your-sendgrid-key
# ALERT_EMAIL=alerts@example.com

# Function Configuration
FUNCTION_TIMEOUT=540
LOG_LEVEL=INFO

# Budget Configuration (Pro API limits)
PRO_DAILY_LIMIT=50
PRO_MONTHLY_LIMIT=1000
BUDGET_TIMEZONE=Asia/Tokyo
